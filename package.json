{
  "name": "terminal-graph",
  "version": "1.1.0",
  "description": "Real-time ASCII line graphs for terminal - monitor memory, metrics, and data streams",
  "main": "src/index.js",
  "bin": {
    "terminal-graph": "src/cli.js",
    "tgraph": "src/cli.js",
    "tgraph-monitor": "src/tgraph-monitor.js"
  },
  "scripts": {
    "start": "node src/cli.js demo",
    "monitor": "node src/cli.js monitor",
    "view": "node src/cli.js view",
    "demo": "node src/cli.js demo",
    "test": "npm run test:cli && npm run test:functionality",
    "test:cli": "node src/cli.js --version && timeout 5s node src/cli.js demo || echo 'CLI test complete'",
    "test:functionality": "timeout 5s ./src/tgraph-monitor.js node --version || echo 'Monitor test complete'",
    "example": "node examples/example-app.js",
    "example-monitor": "./examples/monitor-example.sh",
    "tgraph-demo": "./examples/tgraph-monitor-demo.sh",
    "commit": "cz",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "terminal",
    "graph",
    "chart",
    "ascii",
    "monitoring",
    "heap",
    "memory",
    "cli",
    "visualization",
    "real-time",
    "metrics",
    "console",
    "dashboard",
    "nodejs",
    "performance",
    "devtools",
    "logging",
    "analytics",
    "profiling"
  ],
  "author": "giovannymassuia",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/giovannymassuia/terminal-graph.git"
  },
  "bugs": {
    "url": "https://github.com/giovannymassuia/terminal-graph/issues"
  },
  "homepage": "https://github.com/giovannymassuia/terminal-graph#readme",
  "dependencies": {
    "tail": "^2.2.6",
    "open": "^8.4.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "commitizen": "^4.3.0",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "semantic-release": "^22.0.12"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "src/",
    "web/",
    "examples/",
    "README.md",
    "LICENSE",
    "MONITORING-GUIDE.md",
    "CHANGELOG.md"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
